<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html,
    body {
      height: 100%;
      width: 100%;
    }
    .commentstatement:focus{
      outline: none;
      border: none;
    }
  </style>
</head>

<body>

  <div class="h-100 w-100 d-flex align-items-center justify-content-center gap-2">
    <% posts.forEach((post)=>{ %>
      <div class="card" style="width: 18rem">
        <img src="<%= post.image %>" class="card-img-top" style="height: 250px" alt="..." />
        <div class="card-body">
          // owner code
          <div class="d-flex align-items-center justify-content-between">
            <p class="card-title">
              <%= post.caption %>
            </p>
            <a href="/postlike/<%= post._id %>" class="btn btn-success">Likes <%= post.likes.length %></a>
          </div>
          <form action="/addComment/<%=post._id %> " class="mt-2 d-flex rounded-2 gap-1" method="post">
            <input class="commentstatement" style="width: 90%; border: none; border-bottom: 1px solid black;" type="text" name="data" placeholder="write comment here">
            <input class="rounded-pill btn btn-primary " style="width: 35%; outline: none; outline-offset: 0; padding: 5px 10px;" type="submit" value="comment">
          </form>
          <div class="comments d-flex flex-column gap-2 text-light mt-2">
            <% post.comments.forEach(comment=>{ %>
              <div class="comment bg-secondary rounded-2 position-relative">
                <div class="user">
                  <img style="height:25px; width:25px; object-fit:cover; border-radius:50%"
                    src="<%= comment.user.image %>" alt="">
                  <small>
                    <%= comment.user.username %>
                  </small>
                </div>
                <small>
                  <h4>
                    <%= comment.data %>
                  </h4>
                </small>
                <a href="/deletecomment/<%= comment._id %>" style="right:10px; top:50%;"
                  class="translate-middle-y position-absolute btn btn-outline-danger"><i
                    class="ri-delete-bin-4-line"></i></a href="/deletecomment/<%= comment._id %>">
              </div>
              <% }) %>
          </div>
        </div>
      </div>

      <% }) %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>

</html>